{
    "version": "1.0",
    "lastUpdated": "2025-12-27",
    "description": "Growth intelligence and business analytics for SPORTIQ",
    "userAcquisition": {
        "enabled": true,
        "sources": {
            "organic": {
                "track": true,
                "searchEngines": [
                    "google",
                    "bing",
                    "yahoo",
                    "duckduckgo"
                ],
                "trackKeywords": true,
                "trackRankings": false
            },
            "direct": {
                "track": true,
                "includeBookmarks": true
            },
            "social": {
                "track": true,
                "platforms": [
                    "facebook",
                    "twitter",
                    "instagram",
                    "linkedin",
                    "reddit",
                    "tiktok"
                ],
                "trackCampaigns": true
            },
            "referral": {
                "track": true,
                "topReferrers": 50,
                "trackBacklinks": true
            },
            "paid": {
                "track": true,
                "platforms": [
                    "google_ads",
                    "facebook_ads",
                    "twitter_ads"
                ],
                "trackROI": true
            },
            "email": {
                "track": true,
                "trackCampaigns": true,
                "trackNewsletters": true
            }
        },
        "utmTracking": {
            "enabled": true,
            "parameters": [
                "utm_source",
                "utm_medium",
                "utm_campaign",
                "utm_term",
                "utm_content"
            ]
        },
        "costAnalysis": {
            "enabled": false,
            "trackCPC": false,
            "trackCPA": false,
            "trackROAS": false
        }
    },
    "retentionAnalysis": {
        "enabled": true,
        "cohorts": {
            "enabled": true,
            "groupBy": "month",
            "trackPeriods": [
                1,
                7,
                14,
                30,
                60,
                90
            ],
            "metrics": [
                "retention_rate",
                "churn_rate",
                "engagement_score"
            ]
        },
        "retentionCurve": {
            "enabled": true,
            "days": [
                1,
                3,
                7,
                14,
                30,
                60,
                90
            ],
            "benchmarks": {
                "day1": 40,
                "day7": 25,
                "day30": 18,
                "day90": 12
            }
        },
        "churnPrediction": {
            "enabled": true,
            "model": "ml_based",
            "riskScore": true,
            "factors": [
                "days_since_last_visit",
                "session_frequency",
                "engagement_score",
                "content_consumption"
            ]
        }
    },
    "engagementMetrics": {
        "enabled": true,
        "userEngagementScore": {
            "enabled": true,
            "weights": {
                "frequency": 0.30,
                "recency": 0.25,
                "duration": 0.20,
                "actions": 0.25
            },
            "scoring": {
                "excellent": 80,
                "good": 60,
                "average": 40,
                "poor": 20
            }
        },
        "contentPerformance": {
            "enabled": true,
            "metrics": {
                "views": true,
                "uniqueViews": true,
                "avgTimeOnPage": true,
                "bounceRate": true,
                "exitRate": true,
                "scrollDepth": true,
                "shareRate": true,
                "commentRate": true
            },
            "topContent": {
                "enabled": true,
                "limit": 50,
                "period": "30d"
            }
        },
        "sessionQuality": {
            "enabled": true,
            "metrics": {
                "bounceRate": true,
                "pagesPerSession": true,
                "avgSessionDuration": true,
                "conversionRate": true
            }
        }
    },
    "revenueAnalytics": {
        "enabled": true,
        "tracking": {
            "totalRevenue": true,
            "revenuePerUser": true,
            "revenuePerSession": true,
            "revenuePerPageview": true,
            "adRevenue": true,
            "subscriptionRevenue": false,
            "affiliateRevenue": false
        },
        "attribution": {
            "models": {
                "firstTouch": true,
                "lastTouch": true,
                "linear": true,
                "timeDecay": true,
                "positionBased": true
            },
            "lookbackWindow": 2592000000,
            "crossDevice": false
        },
        "lifetime Value": {
            "enabled": true,
            "calculateLTV": true,
            "predictLTV": true,
            "segments": [
                "new",
                "active",
                "power",
                "at_risk",
                "churned"
            ]
        },
        "monetizationMetrics": {
            "enabled": true,
            "metrics": {
                "rpm": true,
                "ecpm": true,
                "fillRate": true,
                "ctr": true,
                "viewability": true
            }
        }
    },
    "funnelTracking": {
        "enabled": true,
        "funnels": {
            "user_signup": {
                "enabled": true,
                "steps": [
                    {
                        "step": 1,
                        "name": "Landing page",
                        "url": "/"
                    },
                    {
                        "step": 2,
                        "name": "Signup form",
                        "url": "/register"
                    },
                    {
                        "step": 3,
                        "name": "Email verification",
                        "event": "email_verified"
                    },
                    {
                        "step": 4,
                        "name": "Account active",
                        "event": "profile_complete"
                    }
                ],
                "goals": {
                    "conversionRate": 12,
                    "timeToConvert": 300
                }
            },
            "content_engagement": {
                "enabled": true,
                "steps": [
                    {
                        "step": 1,
                        "name": "Article view",
                        "event": "page_view"
                    },
                    {
                        "step": 2,
                        "name": "Read 50%",
                        "event": "scroll_50"
                    },
                    {
                        "step": 3,
                        "name": "Complete read",
                        "event": "scroll_100"
                    },
                    {
                        "step": 4,
                        "name": "Engagement action",
                        "event": "like_or_share_or_comment"
                    }
                ]
            },
            "video_engagement": {
                "enabled": true,
                "steps": [
                    {
                        "step": 1,
                        "name": "Video view",
                        "event": "video_view"
                    },
                    {
                        "step": 2,
                        "name": "Video start",
                        "event": "video_play"
                    },
                    {
                        "step": 3,
                        "name": "Watch 75%",
                        "event": "video_75"
                    },
                    {
                        "step": 4,
                        "name": "Complete watch",
                        "event": "video_complete"
                    }
                ]
            }
        },
        "dropoffAnalysis": {
            "enabled": true,
            "identifyBottlenecks": true,
            "suggestOptimizations": true
        }
    },
    "abTesting": {
        "enabled": true,
        "framework": "custom",
        "tests": {
            "maxConcurrent": 5,
            "minSampleSize": 1000,
            "confidenceLevel": 0.95,
            "maxDuration": 2592000000
        },
        "trackingMetrics": {
            "conversionRate": true,
            "engagementRate": true,
            "bounceRate": true,
            "avgSessionDuration": true,
            "revenue": true
        },
        "segmentation": {
            "enabled": true,
            "segments": [
                "new_users",
                "returning_users",
                "mobile",
                "desktop"
            ]
        }
    },
    "kpiDashboard": {
        "enabled": true,
        "metrics": {
            "traffic": {
                "totalVisitors": {
                    "current": 100000,
                    "target": 150000,
                    "trend": "up"
                },
                "uniqueVisitors": {
                    "current": 70000,
                    "target": 100000,
                    "trend": "up"
                },
                "pageviews": {
                    "current": 340000,
                    "target": 500000,
                    "trend": "up"
                }
            },
            "engagement": {
                "bounceRate": {
                    "current": 45,
                    "target": 35,
                    "trend": "down"
                },
                "avgSessionDuration": {
                    "current": 240,
                    "target": 300,
                    "trend": "up"
                },
                "pagesPerSession": {
                    "current": 3.4,
                    "target": 4.5,
                    "trend": "up"
                }
            },
            "conversion": {
                "conversionRate": {
                    "current": 3.2,
                    "target": 5.0,
                    "trend": "up"
                },
                "goalCompletions": {
                    "current": 3200,
                    "target": 5000,
                    "trend": "up"
                }
            },
            "revenue": {
                "totalRevenue": {
                    "current": 61000,
                    "target": 75000,
                    "trend": "up"
                },
                "rpm": {
                    "current": 179,
                    "target": 200,
                    "trend": "up"
                },
                "ecpm": {
                    "current": 25,
                    "target": 30,
                    "trend": "up"
                }
            },
            "growth": {
                "monthOverMonth": {
                    "current": 15,
                    "target": 20,
                    "trend": "up"
                },
                "yearOverYear": {
                    "current": 120,
                    "target": 150,
                    "trend": "up"
                }
            }
        },
        "refresh": {
            "realTime": true,
            "interval": 300000
        }
    },
    "segmentation": {
        "enabled": true,
        "userSegments": {
            "byBehavior": {
                "new_users": "visitCount === 1",
                "returning_users": "visitCount > 1",
                "power_users": "engagementScore > 80",
                "at_risk": "daysSinceLastVisit > 30"
            },
            "byDemographics": {
                "mobile_users": "deviceType === 'mobile'",
                "desktop_users": "deviceType === 'desktop'",
                "us_users": "country === 'US'",
                "international": "country !== 'US'"
            },
            "byValue": {
                "high_value": "ltv > 100",
                "medium_value": "ltv > 50 && ltv <= 100",
                "low_value": "ltv <= 50"
            }
        }
    },
    "predictiveAnalytics": {
        "enabled": true,
        "models": {
            "churnPrediction": {
                "enabled": true,
                "algorithm": "logistic_regression",
                "features": [
                    "recency",
                    "frequency",
                    "engagement",
                    "content_consumption"
                ],
                "accuracy": 0.85
            },
            "ltvPrediction": {
                "enabled": true,
                "algorithm": "random_forest",
                "features": [
                    "frequency",
                    "recency",
                    "avg_session_duration",
                    "pages_per_session"
                ],
                "accuracy": 0.80
            },
            "contentRecommendation": {
                "enabled": true,
                "algorithm": "collaborative_filtering"
            }
        }
    },
    "benchmarking": {
        "enabled": true,
        "industry": "sports_media",
        "benchmarks": {
            "bounceRate": 45,
            "avgSessionDuration": 180,
            "pagesPerSession": 3.0,
            "conversionRate": 3.5,
            "returnVisitorRate": 40
        }
    },
    "reportGeneration": {
        "enabled": true,
        "automated": {
            "daily": {
                "enabled": true,
                "time": "09:00",
                "recipients": [
                    "admin@sportiq.com"
                ]
            },
            "weekly": {
                "enabled": true,
                "day": "monday",
                "time": "09:00"
            },
            "monthly": {
                "enabled": true,
                "day": 1,
                "time": "09:00"
            }
        },
        "format": [
            "pdf",
            "csv",
            "json"
        ],
        "customReports": {
            "enabled": true,
            "maxSaved": 10
        }
    }
}