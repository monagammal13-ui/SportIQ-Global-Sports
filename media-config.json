{
    "version": "1.0.0",
    "lastUpdated": "2025-12-29",
    "description": "Media and assets configuration for SPORTIQ platform",
    "lazyLoading": {
        "enabled": true,
        "rootMargin": "50px",
        "threshold": 0.01,
        "fadeInDuration": 300
    },
    "images": {
        "quality": 85,
        "formats": [
            "webp",
            "jpg",
            "png",
            "svg"
        ],
        "responsive": true,
        "placeholder": "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 400 300'%3E%3Crect width='400' height='300' fill='%23f0f0f0'/%3E%3Ctext x='50%25' y='50%25' text-anchor='middle' fill='%23999' font-size='18'%3ELoading...%3C/text%3E%3C/svg%3E",
        "maxWidth": 1920,
        "breakpoints": {
            "mobile": 480,
            "tablet": 768,
            "desktop": 1024,
            "wide": 1920
        }
    },
    "videos": {
        "autoplay": false,
        "muted": true,
        "controls": true,
        "preload": "metadata",
        "loop": false,
        "playsinline": true
    },
    "cdn": {
        "enabled": false,
        "baseUrl": "",
        "imagePath": "/images/",
        "videoPath": "/videos/"
    },
    "fallback": {
        "image": "/assets/images/placeholder.jpg",
        "video": "/assets/videos/placeholder.mp4",
        "icon": "/assets/icons/default-icon.svg"
    },
    "optimization": {
        "compressionLevel": 85,
        "cacheImages": true,
        "cacheDuration": 86400,
        "webpSupport": true,
        "avifSupport": false
    },
    "assets": {
        "imagesPath": "../assets/images/",
        "videosPath": "../assets/videos/",
        "iconsPath": "../assets/icons/"
    }
}