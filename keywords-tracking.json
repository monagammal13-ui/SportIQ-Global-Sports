{
    "version": "1.0",
    "lastUpdated": "2025-12-27",
    "description": "Global keywords tracking and trending topics for SPORTIQ",
    "keywordExtraction": {
        "enabled": true,
        "methods": {
            "nlp": {
                "enabled": true,
                "provider": "custom",
                "algorithms": [
                    "tf-idf",
                    "rake",
                    "textrank"
                ],
                "minConfidence": 0.6
            },
            "entityRecognition": {
                "enabled": true,
                "entities": [
                    "teams",
                    "players",
                    "leagues",
                    "competitions",
                    "managers"
                ],
                "linkToPages": true
            },
            "hashtagExtraction": {
                "enabled": true,
                "sources": [
                    "twitter",
                    "instagram",
                    "content"
                ],
                "minFrequency": 5
            }
        },
        "filters": {
            "minLength": 3,
            "maxLength": 50,
            "stopWords": true,
            "customBlacklist": [
                "click",
                "here",
                "read",
                "more",
                "watch"
            ]
        }
    },
    "trendingKeywords": {
        "enabled": true,
        "timeWindows": {
            "realTime": {
                "duration": 3600000,
                "label": "Trending Now",
                "maxKeywords": 20,
                "minMentions": 10
            },
            "hourly": {
                "duration": 3600000,
                "label": "Last Hour",
                "maxKeywords": 50,
                "minMentions": 5
            },
            "daily": {
                "duration": 86400000,
                "label": "Today",
                "maxKeywords": 100,
                "minMentions": 20
            },
            "weekly": {
                "duration": 604800000,
                "label": "This Week",
                "maxKeywords": 200,
                "minMentions": 50
            }
        },
        "scoring": {
            "frequency": 0.35,
            "velocity": 0.30,
            "recency": 0.20,
            "engagement": 0.15
        }
    },
    "searchTrends": {
        "enabled": true,
        "trackQueries": true,
        "aggregation": {
