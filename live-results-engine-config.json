    "scoreCalculation": {
        "football": {
            "homeScore": "sum(homeGoals)",
            "awayScore": "sum(awayGoals)",
            "aggregate": "homeScore + awayScore"
        },
        "basketball": {
            "homeScore": "sum(homePoints)",
            "awayScore": "sum(awayPoints)",
            "quarterScores": true
        },
        "tennis": {
            "sets": "array(setSc ores)",
            "games": "current_set_games",
            "points": "current_game_points"
        },
        "cricket": {
            "runs": "sum(batting_runs)",
            "wickets": "count(wickets_fallen)",
            "overs": "balls_bowled / 6"
        }
    },
    "notifications": {
        "enabled": true,
        "triggers": {
            "matchStart": {
                "enabled": true,
                "condition": "status == 'live'",
                "favoriteTeamsOnly": true
            },
            "goal": {
                "enabled": true,
                "condition": "event.type == 'goal'",
                "favoriteTeamsOnly": true,
                "sound": true
            },
            "redCard": {
                "enabled": true,
                "condition": "event.type == 'redCard'",
                "favoriteTeamsOnly": false
            },
            "halfTime": {
                "enabled": false,
                "condition": "status == 'half-time'"
            },
            "fullTime": {
                "enabled": true,
                "condition": "status == 'finished'",
                "favoriteTeamsOnly": true
            },
            "closeMatch": {
                "enabled": true,
                "condition": "abs(homeScore - awayScore) <= 1 && elapsed > 80",
                "description": "Notify when match is close in final minutes"
            }
        },
        "preferences": {
            "userControlled": true,
            "requirePermission": true,
            "sound": true,
            "vibrate": true
        }
    },
    "caching": {
        "strategy": "multi-tier",
        "live": {
            "enabled": true,
            "ttl": 30000,
            "storage": "memory",
            "maxSize": 100
        },
        "finished": {
            "enabled": true,
            "ttl": 86400000,
            "storage": "localStorage",
            "maxSize": 500
        },
        "standings": {
            "enabled": true,
            "ttl": 900000,
            "storage": "localStorage",
            "maxSize": 100
        },
        "invalidation": {
            "onUpdate": true,
            "onError": false,
            "manual": true
        }
    },
    "errorHandling": {
        "retry": {
            "enabled": true,
            "maxAttempts": 3,
            "backoff": "exponential",
            "initialDelay": 1000,
            "maxDelay": 30000
        },
        "fallback": {
            "useCachedData": true,
            "maxStaleTime": 300000,
            "showStaleIndicator": true
        },
        "logging": {
            "enabled": true,
            "level": "error",
            "destination": "/logs/live-results-errors.log"
        }
    },
    "display": {
        "scoreboard": {
            "compact": {
                "height": 60,
                "showTeamLogos": true,
                "showScore": true,
                "showTime": true,
                "showEvents": false
            },
            "standard": {
                "height": 100,
                "showTeamLogos": true,
                "showScore": true,
                "showTime": true,
                "showEvents": true,
                "showStats": false
            },
            "detailed": {
                "height": 200,
                "showTeamLogos": true,
                "showScore": true,
                "showTime": true,
                "showEvents": true,
                "showStats": true,
                "showLineups": false
            },
            "full": {
                "showTeamLogos": true,
                "showScore": true,
                "showTime": true,
                "showEvents": true,
                "showStats": true,
                "showLineups": true,
                "showCommentary": true
            }
        },
        "liveIndicator": {
            "enabled": true,
            "style": "pulse",
            "color": "#ef4444",
            "text": "LIVE"
        },
        "autoRefresh": {
            "enabled": true,
            "showCountdown": false,
            "smoothUpdate": true
        }
    }
}