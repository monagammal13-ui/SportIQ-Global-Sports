{
    "version": "1.0",
    "lastUpdated": "2025-12-27",
    "description": "Complete live sports results engine for SPORTIQ",
    "engine": {
        "enabled": true,
        "realTime": true,
        "autoUpdate": true,
        "cacheResults": true
    },
    "updateIntervals": {
        "live": {
            "enabled": true,
            "interval": 30000,
            "matchStatus": [
                "live",
                "half-time",
                "break"
            ],
            "priority": "high"
        },
        "preMatch": {
            "enabled": true,
            "interval": 300000,
            "matchStatus": [
                "scheduled",
                "pre-match"
            ],
            "priority": "medium"
        },
        "finished": {
            "enabled": true,
            "interval": 3600000,
            "matchStatus": [
                "finished",
                "ft",
                "aet",
                "pen"
            ],
            "priority": "low"
        },
        "standings": {
            "enabled": true,
            "interval": 900000,
            "priority": "medium"
        }
    },
    "connections": {
        "websocket": {
            "enabled": true,
            "url": "wss://api.sportiq.com/live",
            "reconnect": true,
            "reconnectInterval": 5000,
            "maxReconnectAttempts": 10
        },
        "polling": {
            "enabled": true,
            "fallback": true,
            "interval": 30000
        },
        "serverSentEvents": {
            "enabled": false,
            "url": "/api/live/events"
        }
    },
