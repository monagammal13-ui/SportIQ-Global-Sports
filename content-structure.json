{
    "version": "1.0",
    "lastUpdated": "2025-12-27",
    "description": "Complete content structure and architecture for SPORTIQ",
    "articleSchema": {
        "required": [
            "id",
            "type",
            "title",
            "slug",
            "content",
            "author",
            "category",
            "publishDate",
            "status"
        ],
        "fields": {
            "id": {
                "type": "string",
                "pattern": "article_[0-9]+",
                "description": "Unique article identifier"
            },
            "type": {
                "type": "string",
                "enum": [
                    "article",
                    "video",
                    "gallery",
                    "live",
                    "analysis",
                    "interview",
                    "opinion",
                    "match_report"
                ],
                "default": "article"
            },
            "title": {
                "type": "string",
                "minLength": 10,
                "maxLength": 200,
                "required": true
            },
            "slug": {
                "type": "string",
                "pattern": "^[a-z0-9-]+$",
                "maxLength": 250,
                "unique": true
            },
            "excerpt": {
                "type": "string",
                "maxLength": 300,
                "description": "Short summary for previews"
            },
            "content": {
                "type": "text",
                "format": "html",
                "required": true
            },
            "author": {
                "type": "object",
                "properties": {
                    "id": "string",
                    "name": "string",
                    "avatar": "string",
                    "bio": "string"
                }
            },
            "category": {
                "type": "string",
                "required": true,
                "ref": "categories"
            },
            "subcategory": {
                "type": "string",
                "ref": "categories"
            },
            "tags": {
                "type": "array",
                "items": "string",
                "maxItems": 10
            },
            "teams": {
                "type": "array",
                "items": "string",
                "description": "Team IDs mentioned in article"
            },
            "players": {
                "type": "array",
                "items": "string",
                "description": "Player IDs mentioned in article"
            },
            "league": {
                "type": "string",
                "description": "League ID if applicable"
            },
            "publishDate": {
                "type": "datetime",
                "required": true
            },
            "modifiedDate": {
                "type": "datetime"
            },
            "featured": {
                "type": "boolean",
                "default": false
            },
            "trending": {
                "type": "boolean",
                "default": false
            },
            "breaking": {
                "type": "boolean",
                "default": false
            },
            "status": {
                "type": "string",
                "enum": [
                    "draft",
                    "scheduled",
                    "published",
                    "archived"
                ],
                "default": "draft"
            }
        }
    },
